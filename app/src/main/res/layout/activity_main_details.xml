<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainDetails">

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/cart"
        android:layout_marginBottom="30dp"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrow_IV"
                android:padding="15dp"
                android:background="@drawable/icon___keyboard_arrow___left___outlined"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/img1_iv"
                tools:background="@drawable/_103xi7yqgl__sl1024_"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/title1"
                android:textColor="@color/black"
                android:id="@+id/title_tv"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/price"
                android:id="@+id/price1_tv"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/details"
                android:textColor="@color/black"
                android:id="@+id/details_tv"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:layout_marginEnd="39dp"
                android:layout_marginTop="55dp" />


        </LinearLayout>

    </ScrollView>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:text="@string/cart"
    android:textAlignment="center"
    android:paddingTop="15dp"
    android:id="@+id/cart"
    android:paddingBottom="15dp"
    android:textColor="@color/white"
    android:layout_alignParentBottom="true">

</TextView>
</RelativeLayout>